# Improv Olympics - Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

# GCP Project Configuration
project_id = "coherent-answer-479115-e1"
region     = "us-central1"

# Environment
environment = "prod"

# Access Control - REQUIRED for production
# Comma-separated list of email addresses allowed to access the application
# Example: "user1@example.com,user2@example.com,admin@ai4joy.org"
allowed_users = ""

# Cloud Run Configuration
min_instances     = 1
max_instances     = 100
cloud_run_cpu     = "2"
cloud_run_memory  = "2Gi"

# Rate Limiting
user_daily_session_limit      = 10
user_concurrent_session_limit = 3

# Monitoring (optional - leave empty to skip alert creation)
notification_channels = []
